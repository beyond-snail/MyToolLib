<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_radius_rect_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_alert_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="10dp"
        android:singleLine="true"
        android:text="发货"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:text="物流快递"
            android:ems="4"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_hdpi" />
        <EditText
            android:id="@+id/et_ems_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:padding="10dp"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:textCursorDrawable="@null"
            android:textColor="#333333"
            android:background="@drawable/bg_textarea"
            android:textSize="14sp"  />
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="5dp"
            android:contentDescription="@null"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:padding="5dp"
            android:src="@drawable/ic_scan" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:text="运单号"
            android:ems="4"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_hdpi" />
        <EditText
            android:id="@+id/et_ems_no"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:padding="10dp"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:textCursorDrawable="@null"
            android:textColor="#333333"
            android:background="@drawable/bg_textarea"
            android:textSize="14sp"  />
        <ImageView
            android:id="@+id/iv_scan"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="5dp"
            android:contentDescription="@null"
            android:layout_gravity="center"
            android:padding="5dp"
            android:src="@drawable/ic_scan" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:background="#A9A9A9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_alert_dialog_btn_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="#999999"
            android:text="关闭"
            android:textSize="16sp" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#A9A9A9" />

        <TextView
            android:id="@+id/btn_alert_dialog_btn_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/bg_blue"
            android:text="确定"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>