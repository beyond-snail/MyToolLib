<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="Keyboard">

        <attr name="xml" format="reference" />
        <attr name="random_keys" format="reference|boolean"></attr>
        <attr name="isAmount" format="reference|boolean"></attr>
    </declare-styleable>

    <declare-styleable name="CouponStyle">
        <attr name="vertical_style">
            <enum name="none" value="0"/>
            <enum name="circle" value="1" />
            <enum name="triangle" value="2"/>
        </attr>
        <attr name="horizontal_style">
            <enum name="none" value="0"/>
            <enum name="circle" value="1" />
            <enum name="triangle" value="2"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="AmountView">

        <!-- 左右2边+-按钮的宽度 -->
        <attr name="btnWidth" format="dimension" />
        <!-- 中间TextView的宽度 -->
        <attr name="tvWidth" format="dimension" />
        <!-- <attr name="tvColor" format="color"/> -->
        <attr name="tvTextSize" format="dimension" />
        <attr name="btnTextSize" format="dimension" />
    </declare-styleable>
    <!-- 圆角ImageView -->
    <declare-styleable name="roundedimageview">
        <attr name="border_thickness" format="dimension" />
        <attr name="border_inside_color" format="color" />
        <attr name="border_outside_color" format="color"></attr>
    </declare-styleable>
    <declare-styleable name="LetterSpacingTextView">
        <attr name="textSpacing" format="float" />
        <attr name="text" format="string" />
    </declare-styleable>

    <declare-styleable name="Search_View">
        <attr name="textSizeSearch" format="dimension"  />
        <attr name="textColorSearch" format="color" />
        <attr name="textHintSearch" format="string" />
        <attr name="searchBlockHeight" format="integer" />
        <attr name="searchBlockColor" format="color" />
    </declare-styleable>

    <!--搜索图标左边margin-->
    <attr name="SearchBarIconMarginLeft" format="dimension"/>
    <!--搜索图标右边margin-->
    <attr name="SearchBarIconMarginRight" format="dimension"/>
    <!--搜索图标-->
    <attr name="SearchBarIconSrc" format="reference"/>
    <!--清除图标左边margin-->
    <attr name="ClearIconMarginLeft" format="dimension"/>
    <!--清除图标右边margin-->
    <attr name="ClearIconMarginRight" format="dimension"/>
    <!--清除图标-->
    <attr name="ClearIconSrc" format="reference"/>
    <!--搜索文字大小-->
    <attr name="SearchTextSize" format="dimension"/>
    <!--搜索文字颜色-->
    <attr name="SearchTextColor" format="color"/>
    <declare-styleable name="CommolySearchView">
        <attr name="SearchBarIconMarginLeft"/>
        <attr name="SearchBarIconMarginRight"/>
        <attr name="SearchBarIconSrc"/>
        <attr name="ClearIconMarginLeft"/>
        <attr name="ClearIconMarginRight"/>
        <attr name="ClearIconSrc"/>
        <attr name="SearchTextSize"/>
        <attr name="SearchTextColor"/>
    </declare-styleable>

    <!-- RTextView -->
    <declare-styleable name="RTextView">

        <!--四周圆角度、左上、右上、左下、右下-->
        <attr name="corner_radius" format="dimension" />
        <attr name="corner_radius_top_left" format="dimension" />
        <attr name="corner_radius_top_right" format="dimension" />
        <attr name="corner_radius_bottom_left" format="dimension" />
        <attr name="corner_radius_bottom_right" format="dimension" />

        <!--虚线边框宽度/间隔-->
        <attr name="border_dash_width" format="dimension" />
        <attr name="border_dash_gap" format="dimension" />

        <!--边框宽度-->
        <attr name="border_width_normal" format="dimension" />
        <attr name="border_width_pressed" format="dimension" />
        <attr name="border_width_unable" format="dimension" />

        <!--边框颜色-->
        <attr name="border_color_normal" format="color" />
        <attr name="border_color_pressed" format="color" />
        <attr name="border_color_unable" format="color" />

        <!--背景颜色-->
        <attr name="background_normal" format="color" />
        <attr name="background_pressed" format="color" />
        <attr name="background_unable" format="color" />

        <!--文本颜色-->
        <attr name="text_color_normal" format="color" />
        <attr name="text_color_pressed" format="color" />
        <attr name="text_color_unable" format="color" />

        <!--图标资源-->
        <attr name="icon_src_normal" format="reference" />
        <attr name="icon_src_pressed" format="reference" />
        <attr name="icon_src_unable" format="reference" />

        <!--图标、大小、位置-->
        <attr name="icon_height" format="dimension" />
        <attr name="icon_width" format="dimension" />
        <attr name="icon_direction">
            <enum name="left" value="1" />
            <enum name="top" value="2" />
            <enum name="right" value="3" />
            <enum name="bottom" value="4" />
        </attr>

        <!--字体样式-->
        <attr name="text_typeface" format="string" />

    </declare-styleable>


    <declare-styleable name="ToggleButton">
        <attr name="tbtn_colorNormal" format="color" />
        <attr name="tbtn_colorLight" format="color" />
        <attr name="tbtn_colorPadding" format="color" />
        <attr name="tbtn_padding" format="dimension" />
        <attr name="tbtn_duration" format="integer" />
    </declare-styleable>

    <declare-styleable name="NumKeyView">
        <attr name="gbColor" format="color|reference"></attr>
        <attr name="deleteDrawable" format="reference"></attr>
    </declare-styleable>



    <declare-styleable name="ZzHorizontalProgressBar">
        <attr name="zpb_padding" format="dimension" />
        <attr name="zpb_bg_color" format="color|reference" />
        <attr name="zpb_pb_color" format="color|reference" />
        <attr name="zpb_second_pb_color" format="color|reference" />
        <attr name="zpb_max" format="integer" />
        <attr name="zpb_progress" format="integer" />
        <attr name="zpb_show_second_progress" format="boolean" />
        <attr name="zpb_second_progress" format="integer" />
        <attr name="zpb_show_second_point_shape" format="enum">
            <enum name="point" value="0"/>
            <enum name="line" value="1"/>
        </attr>
        <attr name="zpb_open_gradient" format="boolean" />
        <attr name="zpb_gradient_from" format="color|reference" />
        <attr name="zpb_gradient_to" format="color|reference" />
        <attr name="zpb_open_second_gradient" format="boolean" />
        <attr name="zpb_second_gradient_from" format="color|reference" />
        <attr name="zpb_second_gradient_to" format="color|reference" />
        <attr name="zpb_use_rect_mode" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ViewfinderView">
        <attr name="inner_width" format="dimension"/>
        <attr name="inner_height" format="dimension"/>
        <attr name="inner_margintop" format="dimension" />
        <attr name="inner_corner_color" format="color" />
        <attr name="inner_corner_length" format="dimension" />
        <attr name="inner_corner_width" format="dimension" />
        <attr name="inner_scan_bitmap" format="reference" />
        <attr name="inner_scan_speed" format="integer" />
        <attr name="inner_scan_iscircle" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CalendarView">
        <!--是否显示农历-->
        <attr name="show_lunar" format="boolean" />
        <!--是否显示上月和下月-->
        <attr name="show_last_next" format="boolean" />
        <!--是否显示节假日-->
        <attr name="show_holiday" format="boolean" />
        <!--是否显示节气-->
        <attr name="show_term" format="boolean" />
        <!--阳历的日期颜色-->
        <attr name="solar_color" format="color" />
        <!--阳历的日期尺寸-->
        <attr name="solar_size" format="integer" />
        <!--农历的日期颜色-->
        <attr name="lunar_color" format="color" />
        <!--农历的日期尺寸-->
        <attr name="lunar_size" format="integer" />
        <!--节日文字颜色-->
        <attr name="holiday_color" format="color" />
        <!--选中的日期文字颜色-->
        <attr name="choose_color" format="color" />
        <!--选中的日期背景-->
        <attr name="day_bg" format="reference" />
        <!--单选时切换月份，是否选中上次的日期-->
        <attr name="switch_choose" format="boolean" />
        <!--设置单选、多选-->
        <attr name="choose_type" format="enum">
            <enum name="single" value="0" />
            <enum name="multi" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="WeekView">
        <!--周的表示形式（x.x.x.x.x.x.x）-->
        <attr name="week_str" format="string" />
        <!--周的文字颜色-->
        <attr name="week_color" format="color" />
        <!--周的文字大小-->
        <attr name="week_size" format="integer" />
    </declare-styleable>

</resources>